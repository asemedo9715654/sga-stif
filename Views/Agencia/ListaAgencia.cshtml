@model IEnumerable<sga_stif.ViewModel.Agencia.ListaAgenciaViewModel>

@{
    ViewData["Title"] = "Lista de Perfil";
}

<div class="card">
    <div class="card-header">

        <div class="row no-print">

            <div class="col-12">
                <p class="lead">Lista de Agências</p>

                @* <a asp-action="NovoPerfil" class="btn btn-success btn-sm float-right"
                    style="margin-right: 5px;">Novo</a> *@

            </div>
        </div>


    </div>
    <div class="card-body">
        <table id="example2" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NomeInstituicaoFinanceira)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NomeCidade)
                    </th>
                    <th>
                        Ação
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NomeInstituicaoFinanceira)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NomeCidade)
                        </td>
                        <td>
                            <a class="btn btn-success btn-xs" asp-action="EditaPerfil"
                            asp-route-idPerfil="@item.IdInstituicaoFinanceira"><i class="fas fa-pen"></i> Editar</a>
                            <a class="btn btn-warning btn-xs" asp-action="Delete"
                            asp-route-id="@item.IdInstituicaoFinanceira">Inativar</a>
                            <a class="btn btn-default btn-xs" asp-action="ListaUtilizadorPorPerfil"
                            asp-route-idPerfil="@item.IdInstituicaoFinanceira" asp-route-nomePerfil="@item.Nome"> <i
                                class="fas fa-file-magnifying-glass"></i> Ver Agências</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>


    </div>
</div>

<script>
    $(function () {
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
        });
    });
</script>
