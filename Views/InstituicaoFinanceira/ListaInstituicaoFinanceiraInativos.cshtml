@model IEnumerable<sga_stif.ViewModel.InstituicaoFinanceira.ListaInstituicaoFinanceiraViewModel>

@{
    ViewData["Title"] = "Lista de Instituições Financeiras Inativos";
}

<div class="card">
    <div class="card-header">

        <div class="row no-print">

            <div class="col-12">
                <p class="lead">Lista de Instituições Financeiras Inativos</p>

                 <a asp-action="ListaInstituicaoFinanceira" class="btn btn-primary btn-sm  float-right"
          style="margin-right: 5px;">Lista de
          Instituição Financeiras Ativos</a>


            </div>
        </div>


    </div>
    <div class="card-body">
        <table id="example2" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                       <th>
                        @Html.DisplayNameFor(model => model.Sigla)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalDeAgencias)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalDeSocios)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataCriacao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataAtualizacao)
                    </th>
                    <th>
                        Ação
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                           <td>
                            @Html.DisplayFor(modelItem => item.Sigla)
                        </td>
                        <td>
                            <span class="badge badge-pill badge-info"> @Html.DisplayFor(modelItem =>item.TotalDeAgencias)</span> Agência(s)

                        </td>
                        <td>
                            <span class="badge badge-pill badge-info"> @Html.DisplayFor(modelItem => item.TotalDeSocios)</span> Sócio(s)

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataCriacao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataAtualizacao)
                        </td>
                        <td>
                            <a class="btn btn-success btn-xs" asp-action="ReativarInstituicaoFinanceira" asp-route-idInstituicaoFinanceira="@item.IdInstituicaoFinanceira">Reativar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>


    </div>
</div>

<script>
    $(function () {
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
        });
    });
</script>
