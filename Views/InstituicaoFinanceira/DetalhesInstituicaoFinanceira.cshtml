@model sga_stif.ViewModel.InstituicaoFinanceira.DetalhesInstituicaoFinanceiraViewModel

@{
    ViewData["Title"] = "Elimina Utilizador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br>
<br>
<br>
<br>
<div class="invoice p-3 mb-3 html-content" id="conteudoDetalhes">

    <div class="row">
        <div class="col-12">
            <h4>
                <i class="fas fa-user"></i> Detalhes da Instituição Financeira - <small>@Model.Nome</small>
                @* <small class="float-right">@DateTime.Now</small> *@
            </h4>
        </div>

    </div>

    <div class="row invoice-info">

        <div class="col-sm-4 invoice-col">
            <b>Dados Instituição Financeira</b><br>
            <br>
            <b>Nome :</b> @Model.Nome<br>
            <b>Sigla :</b> @Model.Sigla<br>
            <b>Total de Agências :</b> @Model.TotalAgencias<br>
            <b>Data de Criação :</b> @Model.DataCriacao<br>
            <b>Data de Atualização :</b> @Model.DataAtualizacao<br>
        </div>


        <div class="col-sm-4 invoice-col">

        </div>

    </div>
    <br>
    <br>
    <br>
    <br>


    <div class="row no-print">

        <div class="col-12">
            <p class="lead">Lista de Numero de Colaboradores por data</p>
            <a asp-action="ListaInstituicaoFinanceira" rel="noopener" class="btn btn-default btn-sm"><i
                                                                                                         class="fas fa-arrow-left"></i> Voltar Para Lista</a>

            <a asp-action="NovoInstituicaoFinanceiraColaboradores" asp-controller="InstituicaoFinanceira"
               asp-route-idInstituicaoFinanceira="@Model.IdInstituicaoFinanceira"
               class="btn btn-success btn-sm float-right" style="margin-right: 5px;"> <i class="fas fa-plus"></i>
                Adicionar
                Número Colaboradores</a>
            <a asp-action="InativarInstituicaoFinanceira" asp-controller="InstituicaoFinanceira"
               asp-route-idInstituicaoFinanceira="@Model.IdInstituicaoFinanceira"
               class="btn btn-warning btn-sm float-right" style="margin-right: 5px;"> <i class="fas fa-user-slash"></i>
                Inativar</a>

            <br>
            <br>

            <div class="col-12 table-responsive">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model =>
                                model.ListaInstituicaoFinanceiraColaboradoresViewModel[0].NumeroColaboradores)

                        </th>
                        <th>
                            @Html.DisplayNameFor(model =>
                                model.ListaInstituicaoFinanceiraColaboradoresViewModel[0].DataInicio)

                        </th>
                        <th>
                            @Html.DisplayNameFor(model =>
                                model.ListaInstituicaoFinanceiraColaboradoresViewModel[0].DataFim)
                        </th>

                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.ListaInstituicaoFinanceiraColaboradoresViewModel)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.NumeroColaboradores) Colaboradore(s)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DataInicio)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DataFim)
                            </td>

                        </tr>
                    }
                    </tbody>
                </table>
            </div>
            <!-- /.col -->
        </div>
    </div>
</div>