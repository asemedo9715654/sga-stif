@model IEnumerable<sga_stif.ViewModel.Monitor.ListaQuotasVencidasViewModel>
@using sga_stif.ViewModel.Monitor

@{
  ViewData["Title"] = "Lista de Perfil";
}




<div class="card card-primary card-outline">
  <div class="card-header">
    <h3 class="card-title">
      <i class="fas fa-edit"></i>
      Monitor de quotas
    </h3>
  </div>
  <div class="card-body">
    <h4>Lista de quotas</h4>
    <ul class="nav nav-tabs" id="custom-content-below-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="custom-content-below-home-tab" data-toggle="pill"
          href="#custom-content-below-home" role="tab" aria-controls="custom-content-below-home"
          aria-selected="true">Quotas Pagas</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="custom-content-below-profile-tab" data-toggle="pill"
          href="#custom-content-below-profile" role="tab" aria-controls="custom-content-below-profile"
          aria-selected="false">Quotas Por Pagar</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="custom-content-below-messages-tab" data-toggle="pill"
          href="#custom-content-below-messages" role="tab" aria-controls="custom-content-below-messages"
          aria-selected="false">Quotas Vencidas</a>
      </li>

    </ul>
    <div class="tab-content" id="custom-content-below-tabContent">
      <div class="tab-pane fade show active" id="custom-content-below-home" role="tabpanel"
        aria-labelledby="custom-content-below-home-tab">
        <table id="example1" class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>
                @Html.DisplayNameFor(model => model.Ano)
              </th>
              <th>
                @Html.DisplayNameFor(model => model.Mes)
              </th>
              <th>
                @Html.DisplayNameFor(model => model.NumeroDeAssociado)
              </th>
              <th>
                @Html.DisplayNameFor(model => model.MontanteParaPagar)
              </th>
              <th>
                @Html.DisplayNameFor(model => model.Estado)
              </th>
              <th>
                Ação
              </th>

            </tr>
          </thead>
          <tbody>
            @foreach (var item in Model)
            {
              <tr>
                <td>
                  @Html.DisplayFor(modelItem => item.Ano)
                </td>
                <td>
                  @Html.DisplayFor(modelItem => item.Mes)
                </td>
                <td>
                  @Html.DisplayFor(modelItem => item.NumeroDeAssociado)
                </td>
                <td>
                  @Html.DisplayFor(modelItem => item.MontanteParaPagar)
                </td>
                <td>

                  @if (item.Estado == EstadoListaQuotasVencidasViewModel.PAGO)
                  {
                    <span class="badge badge-pill badge-success"> @Html.DisplayFor(modelItem =>item.Estado)</span>
                  }
                  else
                  {
                    <span class="badge badge-pill badge-danger"> @Html.DisplayFor(modelItem =>item.Estado)</span>
                  }

                </td>
                <td>

                  @if (item.Estado == EstadoListaQuotasVencidasViewModel.PAGO)
                  {
                    <a class="btn btn-default btn-xs" asp-action="GerirMenuAcaoV1" asp-route-idPerfil="">
                      @* <i class="fas fa-palette"></i> *@
                      Detalhes</a>

                  }
                  else
                  {
                    <a class="btn btn-success btn-xs" asp-action="GerirMenuAcaoV1" asp-route-idPerfil="">
                      @* <i class="fas fa-palette"></i> *@
                      Liquidar
                    </a>
                  }


                </td>
              </tr>
            }
          </tbody>
        </table>
      </div>
