@model IEnumerable<sga_stif.ViewModel.Socio.ListaSocioViewModel>

@{
  ViewData["Title"] = "Lista de Sócios Por tipo quotas";
}

<div class="card">
  <div class="card-header">

     <div class="row no-print">

      <div class="col-12">
        <a  asp-controller="TipologiaSocio" asp-action="ListaTipologiaSocio"> voltar </a>
        <p class="lead">Lista de Sócios de Tipologia de Sócio : <b>@ViewBag.NomeTipoQuota</b></p>
      </div>
    </div>


  </div>
  <div class="card-body">
    <table id="example2" class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>
            @Html.DisplayNameFor(model => model.NumeroDeSocio)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.NomeCompleto)
          </th>
           <th>
            @Html.DisplayNameFor(model => model.Sexo)
          </th>
           <th>
            @Html.DisplayNameFor(model => model.EstadoCivil)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.Nif)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.CinBi)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.TotalBeneficiario)
          </th>
         
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var item in Model)
        {
          <tr>
              <td>
              @Html.DisplayFor(modelItem => item.NumeroDeSocio)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.NomeCompleto)
            </td>
              <td>
              @Html.DisplayFor(modelItem => item.Sexo)
            </td>
              <td>
              @Html.DisplayFor(modelItem => item.EstadoCivil)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.Nif)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.CinBi)
            </td>
             <td>
               <span class="badge badge-pill badge-info"> @Html.DisplayFor(modelItem => item.TotalBeneficiario)</span> Beneficiário(s)
            </td>
            <td>
              <a class="btn btn-default btn-xs " asp-controller="Socio" asp-action="DetalhesSocio" asp-route-idSocio="@item.IdSocio" title="Ver Detalhes Sócio e Adição de Beneficiário!"><i class="fas fa-info"></i> Detalhes</a>   
            </td>
          </tr>
        }
      </tbody>
    </table>


  </div>
</div>


<script>

  $(document).ready(function () {
    $('#example2').DataTable({
      paging: true,
      lengthChange: true,
      searching: true,
      ordering: true,
      responsive: true,
      dom: 'Bfrtip',
      buttons: [
        //'copy', 'csv', 'excel', 'pdf', 'print'
        'excel', 'pdf', 'print'
      ]
    });
  });

</script>
