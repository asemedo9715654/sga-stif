@model sga_stif.ViewModel.Socio.EntregarCartaoViewModel
@{
	ViewData["Title"] = "Entrega Carão";
}

<hr />

<div class="card card-primary">
	<div class="card-header">
		<h3 class="card-title">Dados de entrega</h3>
	</div>
	<form asp-action="EntregarCartao">
		<div class="card-body">

			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="IdSocio" />
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label asp-for="DataEntrega" class="control-label"></label>
						<input asp-for="DataEntrega" class="form-control" />
						<span asp-validation-for="DataEntrega" class="text-danger"></span>
					</div>

				</div>

			</div>

		</div>

		<div class="card-footer">
			<a asp-action="DetalhesSocio" asp-route-idSocio="@Model.IdSocio" class="btn btn-secondary">Cancelar</a>
			<button type="submit" class="btn btn-success">Guardar</button>
		</div>
	</form>

</div>
