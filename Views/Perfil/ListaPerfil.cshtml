@model IEnumerable<sga_stif.ViewModel.Perfil.ListaPerfilViewModel>

@{
  ViewData["Title"] = "Lista de Perfil";
}

<div class="card">
  <div class="card-header">

    <div class="row no-print">

      <div class="col-12">
        <p class="lead">Lista de Perfil</p>

        <a asp-action="NovoPerfil" class="btn btn-success btn-sm float-right" style="margin-right: 5px;">Novo</a>

        <a asp-action="ListaPerfilInativo" class="btn btn-default btn-sm  float-right" style="margin-right: 5px;">Lista
          de Perfil Inativos</a>

      </div>
    </div>


  </div>
  <div class="card-body">
    <table id="example2" class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>
            @Html.DisplayNameFor(model => model.Nome)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.Descricao)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.TotalUtilizadores)
          </th>

          <th>
            @Html.DisplayNameFor(model => model.DataCriacao)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.DataAtualizacao)
          </th>
          <th>
            Ação
          </th>

        </tr>
      </thead>
      <tbody>
        @foreach (var item in Model)
        {
          <tr>
            <td>
              @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
              <a asp-action="ListaUtilizadorPorPerfil" asp-route-idPerfil="@item.IdPerfil"
              asp-route-nomePerfil="@item.Nome">
                <span class="badge badge-pill badge-info"> @Html.DisplayFor(modelItem =>
                item.TotalUtilizadores)</span> Utilizador(es)
              </a>
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.DataCriacao)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.DataAtualizacao)
            </td>
            <td>

            
              
              @if (item.Editavel == true)
              {
                  <a class="btn btn-warning btn-xs" asp-action="InativarPerfil"
              asp-route-idPerfil="@item.IdPerfil">Inativar</a>
                <a class="btn btn-success btn-xs" asp-action="EditaPerfil" asp-route-idPerfil="@item.IdPerfil"><i
                class="fas fa-pen"></i> Editar</a>
              }
              <a class="btn btn-success btn-xs" asp-action="GerirMenuAcaoV1" asp-route-idPerfil="@item.IdPerfil" title="Gerir Instituições Financeiras"> <i class="fas fa-palette"></i> Gerir Ações</a>
                            <a class="btn btn-success btn-xs" asp-action="GerirPerfilInstituicaoFinanceira" asp-route-idPerfil="@item.IdPerfil"> <i class="fas fa-user-group"></i> Gerir Ifs</a>
            </td>

          </tr>
        }
      </tbody>
    </table>

  </div>
</div>

<script>
  $(function () {
    $('#example2').DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": false,
      "ordering": true,
      "info": true,
      "autoWidth": false,
      "responsive": true,
    });
  });
</script>
