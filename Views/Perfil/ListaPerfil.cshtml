@model IEnumerable<sga_stif.Models.Perfil>

@{
  ViewData["Title"] = "Index";
}

<div class="card">
  <div class="card-header">

    <div class="row no-print">

      <div class="col-12">
        <p class="lead">Lista de Perfil</p>

        <a asp-action="NovoPerfil" class="btn btn-success float-right" style="margin-right: 5px;">Novo</a>

      </div>
    </div>


  </div>
  <div class="card-body">
    <table id="example2" class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>
            @Html.DisplayNameFor(model => model.Descricao)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.DataCriacao)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.DataAtualizacao)
          </th>
          <th>
            Ação
          </th>

        </tr>
      </thead>
      <tbody>
        @foreach (var item in Model)
        {
          <tr>
            <td>
              @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.DataCriacao)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.DataAtualizacao)
            </td>
            <td>
              <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.IdPerfil">Editar</a>
              <a class="btn btn-default" asp-action="Details" asp-route-id="@item.IdPerfil">Detalhes</a>
              <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdPerfil">Eliminar</a>
            </td>
          </tr>
        }
      </tbody>
    </table>


  </div>
</div>

<script>
  $(function () {
    $('#example2').DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": true,
      "ordering": true,
      "info": true,
      "autoWidth": false,
      "responsive": true,
    });
  });
</script>
