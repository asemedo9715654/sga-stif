@model IEnumerable<sga_stif.Models.Perfil>

@{
  ViewData["Title"] = "Index";
}

<div class="card">
  <div class="card-header">
    <a asp-action="Create" class="btn btn-success btn-xs">Novo</a>
    <h3 class="card-title">Lista Perfil</h3>
  </div>
  <div class="card-body">
    <table id="example2" class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>
            @Html.DisplayNameFor(model => model.Descricao)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.DataCriacao)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.DataAtualizacao)
          </th>
          <th>
           Ação
          </th>
        
        </tr>
      </thead>
      <tbody>
        @foreach (var item in Model)
        {
          <tr>
            <td>
              @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.DataCriacao)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.DataAtualizacao)
            </td>
             <td>
              <a class="btn btn-success btn-xs" asp-action="Edit" asp-route-id="@item.IdPerfil">Editar</a> 
              <a class="btn btn-default btn-xs" asp-action="Details" asp-route-id="@item.IdPerfil">Detalhes</a> 
              <a class="btn btn-danger btn-xs" asp-action="Delete" asp-route-id="@item.IdPerfil">Eliminar</a>
            </td>
          </tr>
        }
      </tbody>
    </table>


  </div>
</div>

<script>
  $(function () {
    $('#example2').DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": true,
      "ordering": true,
      "info": true,
      "autoWidth": false,
      "responsive": true,
    });
  });
</script>

